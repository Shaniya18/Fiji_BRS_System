<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fiji Airways BRS</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <style>
        :root {
            --fiji-navy: #003366;
            --fiji-gold: #f9b824;
            --fiji-accent: #f4f7f6;
        }

        body {
            background-color: var(--fiji-accent);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
        }

        .navbar {
            background-color: var(--fiji-navy);
            border-bottom: 4px solid var(--fiji-gold);
        }

        .navbar-brand {
            letter-spacing: 1px;
            font-size: 1.4rem;
        }

        .main-content {
            flex: 1;
            padding-top: 20px;
        }

        .footer {
            background: white;
            border-top: 1px solid #dee2e6;
        }

        @@media print {
            .navbar, .footer, .btn, .input-group, #flightFilter, .action-column {
                display: none !important;
            }

            body {
                background-color: white !important;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark shadow-sm mb-4">
        <div class="container-fluid px-4">
            <a class="navbar-brand fw-bold" href="/Baggage">
                <i class="bi bi-airplane-engines-fill me-2 text-warning"></i>FIJI AIRWAYS <span class="fw-light opacity-75">| STAFF PORTAL</span>
            </a>
            <div class="d-flex align-items-center">
                <div class="text-white me-3 d-none d-md-block text-end">
                    <small class="opacity-75 d-block" style="font-size: 0.7rem;">STATION</small>
                    <span class="fw-bold">NAN (Nadi)</span>
                </div>
                <button class="btn btn-outline-warning btn-sm px-3 me-2" onclick="window.print()">
                    <i class="bi bi-printer me-2"></i>Print
                </button>
                <a href="/Account/Logout" class="btn btn-danger btn-sm">
                    <i class="bi bi-box-arrow-right"></i>
                </a>
            </div>
        </div>
    </nav>

    <div class="container-fluid px-4 main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted py-3 mt-auto">
        <div class="container-fluid px-4 d-flex justify-content-between align-items-center">
            <small>&copy; 2026 - Fiji Airways BRS (Internal Use Only)</small>
            <div class="small d-none d-sm-block">
                <span class="me-3"><i class="bi bi-shield-check me-1 text-success"></i>System Encrypted</span>
                <span><i class="bi bi-wifi me-1 text-success"></i>Server: 127.0.0.1:8001 (Online)</span>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>